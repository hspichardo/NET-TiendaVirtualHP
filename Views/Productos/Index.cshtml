@model IEnumerable<TiendaVirutalHarlynPichardoO.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-outline-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
            @if (item.Cantidad < 5)
            {
                <br />
                <span class="label label-danger">Quedan pocos elementos!</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
           
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            <!-- @Html.DisplayFor(modelItem => item.Imagen) -->
            @if (item.Cantidad == 0)
            {
                <img src="~/Content/img/agotado.jpg" width="50px" />
            }
            else
            {
                <img src="~/Content/img/@item.Imagen" width="50px" />
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) |
            @if (item.Cantidad != 0)
            {
                @Html.ActionLink("Agregar Carrito de Compra", "Add", "Carrito", item, new { @class = "btn btn-info" })
            }

        </td>
    </tr>
}

</table>
